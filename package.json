{
  "author": "Evan Tahler <evan@delicioushat.com>",
  "name": "ah-next-plugin",
  "description": "For booting a Next.JS React application inside of Actionhero",
  "license": "Apache-2.0",
  "version": "0.1.0",
  "engines": {
    "node": ">=8.0.0"
  },
  "dependencies": {
    "actionhero": "21.0.9",
    "ws": "latest",
    "ioredis": "latest",
    "winston": "latest"
  },
  "peerDependencies": {
    "next": "any",
    "react": "any",
    "react-dom": "any"
  },
  "devDependencies": {
    "@types/node": "latest",
    "@types/react-dom": "latest",
    "@types/jest": "latest",
    "jest": "latest",
    "react": "latest",
    "react-dom": "latest",
    "next": "latest",
    "prettier": "latest",
    "ts-jest": "latest",
    "ts-node-dev": "latest",
    "typescript": "latest"
  },
  "scripts": {
    "postinstall": "npm run build",
    "dev": "ts-node-dev --no-deps --transpile-only ./node_modules/.bin/actionhero start",
    "start": "actionhero start",
    "actionhero": "actionhero",
    "test": "jest",
    "pretest": "npm run build && npm run lint",
    "build": "tsc --declaration",
    "lint": "prettier --check src/*/** __test__/*/**",
    "pretty": "prettier --write src/*/** __test__/*/**"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  }
}
